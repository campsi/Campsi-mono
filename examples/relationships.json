{
    "name": "relationships",
    "title": "Relationships Example",
    "users": { },
    "roles": {
        "admin": {
            "label": "Administrateur",
            "auth": true
        },
        "public": {
            "label": "Public",
            "auth": false
        }
    },
    "types": {
        "collection": {
            "defaultState": "published",
            "states": {
                "published": {
                    "name": "published",
                    "label": "Published",
                    "validate": "true"
                }
            },
            "permissions": {
                "public": {
                    "published": "*"
                }
            }
        }
    },
    "resources": {
        "categories": {
            "type": "collection",
            "label": "Categories",
            "webhooks": [
                {
                    "on": "POST,PUT,DELETE",
                    "states": ["published"],
                    "uri": "http://127.0.0.1:3001",
                    "method": "POST",
                    "payload": true,
                    "retry": 5,
                    "timeout": 20,
                    "headers": {
                        "Authorization": "Basic YWRtaW5AY2FtcHNpLmlvOnBhc3N3b3Jk"
                    }
                }
            ],
            "fields": [
                {
                    "type": "text",
                    "name": "label",
                    "required": true
                }
            ]
        },
        "articles": {
            "type": "collection",
            "label": "Articles",
            "rels": {
                "parent_category": {
                    "path": "rels.oneToOneRelationship",
                    "resource": "categories",
                    "embed": true,
                    "fields": [
                        "label"
                    ]
                },
                "other_categories": {
                    "path": "rels.oneToManyRelationship.*",
                    "resource": "categories",
                    "embed": false
                }
            },
            "fields": [
                {
                    "type": "text",
                    "name": "title",
                    "label": "Title",
                    "required": "true"
                },
                {
                    "type": "form",
                    "name": "rels",
                    "label": "Relationship example",
                    "fields": [
                        {
                            "type": "array",
                            "name": "oneToManyRelationship",
                            "items": {
                                "type": "text"
                            }
                        },
                        {
                            "type": "text",
                            "name": "oneToOneRelationship"
                        }
                    ]
                }
            ]
        }
    }
}