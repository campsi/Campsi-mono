{
    "roles": {
        "basic": {
            "label": "Basic User",
            "auth": true,
            "admin": false
        }
    },
    "classes": {
        "test-class": {
            "defaultState": "state-public",
            "states": {
                "state-public": {
                    "name": "public",
                    "label": "Public",
                    "validate": false
                },
                "state-basic": {
                    "name": "basic",
                    "label": "Basic",
                    "validate": false
                },
                "state-private": {
                    "name": "private",
                    "label": "Private",
                    "validate": false
                }
            },
            "permissions": {
                "admin": {
                    "state-public": "*",
                    "state-basic": "*",
                    "state-private": "*"
                },
                "basic": {
                    "state-basic": "*"
                },
                "owner": {
                    "state-private": "*"
                },
                "public": {
                    "state-public": "*"
                }
            }
        }
    },
    "resources": {
        "simple": {
            "label": "A Simple Document",
            "class": "test-class",
            "schema": {"$ref": "../schema/document.schema.json"}
        }
    }
}